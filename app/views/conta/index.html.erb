<p id="notice"><%= notice %></p>

<h1>Conta</h1>

<table>
  <thead>
    <tr>
      <th>Descricao</th>
      <th>Tipo</th>
      <th>Despesa</th>
      <th>Valor</th>
      <th>Vencimento</th>
      <th>Fornecedor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conta.each do |contum| %>
      <tr>
        <td><%= contum.descricao %></td>
        <td><%= contum.tipo %></td>
        <td><%= contum.despesa %></td>
        <td><%= contum.valor %></td>
        <td><%= contum.vencimento %></td>
        <td><%= contum.fornecedor %></td>
        <td><%= link_to 'Show', contum %></td>
        <td><%= link_to 'Edit', edit_contum_path(contum) %></td>
        <td><%= link_to 'Destroy', contum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

